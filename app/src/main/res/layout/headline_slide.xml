<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen8dp"
    android:layout_marginTop="@dimen/dimen4dp"
    android:layout_marginRight="@dimen/dimen8dp"
    android:layout_marginBottom="@dimen/dimen4dp"
    app:cardBackgroundColor="@color/colorBlackTransparant"
    app:cardCornerRadius="@dimen/dimen10dp">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/background"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignBottom="@id/iv_image"
            android:background="@drawable/scrim_forlist" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:layout_margin="@dimen/dimen16dp"
            android:maxLength="30"
            android:text="@string/title_for_news"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>