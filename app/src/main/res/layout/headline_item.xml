<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen8dp"
    android:layout_marginTop="@dimen/dimen4dp"
    android:layout_marginRight="@dimen/dimen8dp"
    android:id="@+id/card_view"
    android:layout_marginBottom="@dimen/dimen4dp"
    app:cardBackgroundColor="@color/colorBlackTransparant"
    app:cardCornerRadius="@dimen/dimen10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen240dp"
            android:background="@color/colorDarkGrey"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_image"
            android:background="@color/colorBlackTransparant"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen16dp"
                android:text="@string/news_name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimen18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:layout_margin="@dimen/dimen16dp"
            android:maxLength="120"
            android:text="@string/description_news_in_here"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen14sp" />

        <TextView
            android:id="@+id/tv_published"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen16dp"
            android:layout_marginRight="@dimen/dimen16dp"
            android:layout_marginBottom="@dimen/dimen16dp"
            android:text="@string/default_date"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimen12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>